          <!-- Form validations -->
          <div class="container w-50" >
            <div class="col-lg-12">
              <section class="panel">
                <header class="panel-heading">
                  레시피수정
                </header>
                <div class="panel-body">
                  <div class="form">
                      <form class="form-validate form-horizontal" name=join onsubmit="return validate()" method=post action="/adminrecipe/update?_method=PUT" enctype="multipart/form-data"> 
                        <input type="hidden" name="_method" value="put" />
                        <% var menuname = menuname; %>
                        <% var recipenum = recipenum; %>
                        <% var menunum = menunum; %>
                        <input type='hidden' name='menunum' value=<%=menunum %>>     
                          <div class="form-group col-md-12">
                           <label for="exampleFormControlSelect1">메뉴이름</label>
                            <select class="form-control" id="exampleFormControlSelect1" name=category>
                              <option><%=menuname %></option>
                            </select>
                         </div>
                        <div class="form-group col-md-12">
                          <label for="exampleInputPassword1">현재재료 : </label>
                          <%=meterial %>
                          <br><br>
                          <label for="exampleInputPassword1">수정내용</label>
                          <input type="text" class="form-control" name="meterial" id="meterial">
                          ,(콤마) 로 구분지어 입력, 예) 당근,김치,쌀...
                        </div>
                         <% for(var i = 1; i <= recipenum; i++) { %>
                          <div class="form-group col-md-12">
                            <label for="exampleInputEmail1">현재 조리순서 : </label>
                            <%=recipedata[i] %>
                            <br><br>
                            <label for="exampleInputPassword1">수정내용</label>
                            <input type="text" class="form-control" name="recipeorder" id="recipeorder" aria-describedby="emailHelp">
                          </div>                    
                          <div class="form-group col-md-12">
                            <label for="exampleInputEmail1">조리순서<%=i %> 이미지 (적정사이즈:250x180)</label>
                            <input type="file" class="custom-file-input2" id="entry" width=10px aria-describedby="entry2" accept="image/*" name="photo" multiple>
                          </div>
                         <% } %>
                           <hr>
                           <button style="float:right" type="submit" class="btn btn-primary">레시피수정</button>
                        </form>
                  </div>
                </div>
              </section>
            </div>
          </div>
        </section>
