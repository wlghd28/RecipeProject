    <script language="javascript">
      function validate() {
         let menuname = document.getElementById("menuname");        
         let uploaduser = document.getElementById("uploaduser");
         let difficulty = document.getElementById("difficulty");
         let recipenum = document.getElementById("recipenum");
         if (!menuname || !uploaduser || !difficulty || !recipenum) {
           alert("모든정보가 입력되지 않았습니다, 모든정보를 꼭 입력해주세요.");
           return false;
         }
         alert("메뉴가 등록되었습니다.");
         return true;
      }
