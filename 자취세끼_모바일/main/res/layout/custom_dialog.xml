<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="240dp"
    android:layout_height="200dp"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="즐겨찾기와 레시피 게시판은\n 로그인후 이용가능합니다."
/>
    <Button
        android:layout_below="@+id/dialog_text"
        android:id="@+id/dialog_login"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="로그인 하기"
        />
    <Button
        android:layout_toRightOf="@+id/dialog_login"
        android:layout_below="@+id/dialog_text"
        android:id="@+id/dialog_cancle"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="취소"
        />
</RelativeLayout>