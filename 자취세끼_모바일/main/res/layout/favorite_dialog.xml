<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="240dp"
    android:layout_height="200dp"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/favorite_text"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="즐겨찾기에서 삭제하시겠습니까?"
        />
    <Button
        android:layout_below="@+id/favorite_text"
        android:id="@+id/favorite_ok"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="확인"
        />
    <Button
        android:layout_toRightOf="@+id/favorite_ok"
        android:layout_below="@+id/favorite_text"
        android:id="@+id/favorite_cancle"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="취소"
        />
</RelativeLayout>