<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ingredient_vegetables"
    android:background="#ffffff">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/dairy_nut_gridview"
        android:padding="4dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:scrollbars="vertical"
        android:layout_width="400dp"
        android:background="@drawable/back"
        android:layout_height="450dp"/>


        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택 목록"
        android:textSize="25dp"
        android:layout_below="@+id/dairy_nut_gridview"
        android:id="@+id/ingredient_selectedlist"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="80dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메뉴 검색"
        android:textSize="25dp"
        android:layout_below="@+id/dairy_nut_gridview"
        android:layout_toRightOf="@+id/ingredient_selectedlist"
        android:id="@+id/ingredient_result"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        />
</RelativeLayout>